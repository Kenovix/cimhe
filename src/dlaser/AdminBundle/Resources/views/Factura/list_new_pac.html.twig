{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Listado de facturas pacientes nuevas{% endblock %}

{% block msg %}
	{% if app.session.flash('ok') %}
	    <div class="success mensajes">
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.flash('info') %}
		<div class="info">
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.flash('error') %}
		<div class="error">
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}



{% block cuerpo %}
    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Fecha</th>
                <th>Cliente</th>
                <th>EPS</th>
                <th>Concepto</th>
                <th>Valor</th>
                <th>Sede</th>
                <th></th>                
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('factura_paciente_show', {'id': entity.id}) }}" title="Ver factura">{{ entity.id }}</a></td>
                <td>{{ entity.fecha | date('d-m-Y H:i') }}</td>
                <td>{{ entity.priNombre }} {{ entity.segNombre }} {{ entity.priApellido }} {{ entity.segApellido }}</td>
                <td>{{ entity.cliente }}</td>
                <td>{{ entity.concepto }}</td>
                <td>${{ (entity.subtotal - entity.copago ) | number_format(0) }}</td>
                <td>{{ entity.sede }}</td>
                <td><a href="{{ path('factura_paciente_imprimir', {'id': entity.id}) }}" target="blank" class="button"><span class="icon icon153"></span></a></td>
            </tr>
         {% else %}
         	<tr>
         		<td colspan="6">No tenemos facturas creadas.</td>
         	</tr>
        {% endfor %}
        </tbody>
    </table>
    
    {% if entities %}
		{{ simple_paginator_render('factura_list_newPac', null) }}
    {% endif %}    
{% endblock %}
{% extends "AdminBundle::admin_layout.html.twig" %}

{% block menu %}
	{{ knp_menu_render('AdminBundle:Builder:adminMenu') }}
{% endblock %}

{% block rastro %}{{ wo_render_breadcrumbs() }}{% endblock %}

{% block titulo %}Listado de actividades realizadas{% endblock %}

{% block msg %}
	{% if app.session.flash('ok') %}
	    <div class="success mensajes">
	        <span>{{ app.session.flash('ok') }}</span>
	    </div>
	{% elseif app.session.flash('info') %}
		<div class="info">
	        <span>{{ app.session.flash('info') }}</span>
	    </div>
	{% elseif app.session.flash('error') %}
		<div class="error">
	        <span>{{ app.session.flash('error') }}</span>
	    </div>
	{% endif %}
{% endblock %}

{% block cuerpo %}
	<strong>Sede:</strong>
		<span>{{ sede.nombre }}</span><br />
		
	<label>Cliente:</label>
		<span>{{ cliente.nombre }}</span><br />
		
	<label>Desde:</label>
		<span>{{ f_i }}</span><br />
		
	<label>Hasta:</label>
		<span>{{ f_f }}</span>

    <table>
        <thead>
            <tr>
                <th>No.</th>
                <th>Tipo</th>
                <th>Identificaci贸n</th>
                <th>Fecha</th>
                <th>Autorizaci贸n</th>
                <th>Paciente</th>
                <th>Edad</th>
                <th>Cups</th>
                <th>Actividad</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
                   
        
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('factura_edit', { 'id': entity.id }) }}" target="popup" title="Modificar admisi贸n" onClick="popup(this.href,750,600); return false;">{{ entity.prefijo }} {{ entity.consecutivo }}</a></td>
                <td>{{ entity.tipoId }}</td>
                <td>{{ entity.identificacion }}</td>
                <td>{{ entity.fecha|date('d-m-Y') }}</td>
                <td>{{ entity.autorizacion }}</td>
                <td><a href="{{ path('paciente_edit', { 'id': entity.paciente }) }}" target="popup" title="Modificar admisi贸n" onClick="popup(this.href,750,600); return false;">{{ entity.priNombre|capitalize }} {{ entity.segNombre|capitalize }} {{ entity.priApellido|capitalize }} {{ entity.segApellido|capitalize }}</a></td>
                <td>{{date ('now')| date ('Y-m-d') - entity.fN|date('Y-m-d')}}</td>
                <td>{{ entity.cups }}</td>
                <td>{{ entity.concepto }}</td>
                <td>{{ (entity.subtotal + entity.copago) }}</td>
            </tr>
         {% else %}
         	<tr>
         		<td colspan="10">No tenemos actividades realizades en este periodo de tiempo.</td>
         	</tr>
        {% endfor %}
        
        </tbody>
    </table>
    
    {% if entities %}
    	<form action="{{ path('factura_cobro_imprimir') }}" method="post">
    		<input type="hidden" name="sede" value="{{ sede.id }}" />
    		<input type="hidden" name="cliente" value="{{ cliente.id }}" />
    		<input type="hidden" name="f_inicio" value="{{ f_i }}" />
    		<input type="hidden" name="f_fin" value="{{ f_f }}" />
    		<input type="hidden" name="tipo" value="{{ tipo }}" />

    		<button class="action blue" type="submit">
		        <span class="label">Generar Cta. Cobro</span>
		    </button>
    	</form>
    	{% if rips == 'G' %}
        	<form action="{{ path('factura_final_new') }}" method="post">
        		<input type="hidden" name="sede" value="{{ sede.id }}" />
        		<input type="hidden" name="cliente" value="{{ cliente.id }}" />
        		<input type="hidden" name="f_inicio" value="{{ f_i }}" />
        		<input type="hidden" name="f_fin" value="{{ f_f }}" />
                <input type="hidden" name="rips" value="{{ rips }}" />
        		<input type="hidden" name="tipo" value="{{ tipo }}" />
    
        		<button class="action green" type="submit">
    		        <span class="label">Generar Factura</span>
    		    </button>
    		</form>
    	{% else %}
    		<form action="{{ path('factura_final_rips', { 'id': 0, 'tipo': tipo, 'rips': rips}) }}" method="post">
        		<input type="hidden" name="sede" value="{{ sede.id }}" />
        		<input type="hidden" name="cliente" value="{{ cliente.id }}" />
        		<input type="hidden" name="f_inicio" value="{{ f_i }}" />
        		<input type="hidden" name="f_fin" value="{{ f_f }}" />
    
        		<button class="action green" type="submit">
    		        <span class="label">Generar RIPS</span>
    		    </button>
    		</form>
    	{% endif %}
    {% endif %}
    
{% endblock %}

{% block javascripts %}
<script type="text/javascript">

	function popup(url,ancho,alto) {
		var posicion_x; 
		var posicion_y; 

		posicion_x=(screen.width/2)-(ancho/2); 
		posicion_y=(screen.height/2)-(alto/2); 

		window.open(url, "", "width="+ancho+",height="+alto+",menubar=0,toolbar=0,directories=0,scrollbars=yes,resizable=no,left="+posicion_x+",top="+posicion_y+"");
	}
</script>
{% endblock %}